{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container col-10">
    <h1>Gestion des salariés</h1>
    <a class="btn btn-success" href="{{ path('admin_add') }}">Ajouter un salarié</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Mail</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Secteur</th>
                <th>Photo</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            {% for user in users %}

            {% if user.secteur == 'Direction' %}
            <tr style="background-color : #f6a4ac">
                {% elseif user.secteur == 'Recrutement' %}
            <tr style="background-color : #a4f6aa">
                {% elseif user.secteur == 'Informatique' %}
            <tr style="background-color : #fcea90">
                {% elseif user.secteur == 'Comptabilité' %}
            <tr style="background-color : #a4aaf6">
                {% else %}
            <tr style="background-color : #000000">
                {% endif %}

                <td>{{user.email}}</td>
                <td>{{user.nom}}</td>
                <td>{{user.prenom}}</td>
                <td>{{user.secteur}}</td>
                <td>
                    <img width="150px" height="auto" src="{{ asset('images/upload/' ~ user.photo)}}">
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('update_admin', {'user' : user.id }) }}">Editer</a>

                    {# Bouton de supression avec alerte de confirmation ! #}
                    <a class="btn btn-danger" href="{{ path('delete_user', {'user': user.id }) }}"
                        onclick="return confirm('Êtes vous sure de bien vouloir supprimer ?')">delete</a>

                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}